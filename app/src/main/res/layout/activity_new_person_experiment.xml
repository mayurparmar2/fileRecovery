<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_person_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/new_person_vp2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="@+id/new_person_tv_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/new_person_tv_start">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/new_person_iv_01"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_4"
            app:srcCompat="@drawable/bg_new_person_indicator_selector"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/new_person_iv_02"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_4"
            app:srcCompat="@drawable/bg_new_person_indicator_selector"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/new_person_iv_03"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_4"
            app:srcCompat="@drawable/bg_new_person_indicator_selector"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_100_78869D_70white"
        android:gravity="center"
        android:id="@+id/new_person_tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_27"
        android:text="@string/arg_res_0x7f110201"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginEnd="@dimen/dp_18"
        app:drawableEndCompat="@drawable/icon_new_guide_next_arrow"
        app:layout_constraintBottom_toTopOf="@+id/new_person_ll_ad_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginBottom="@dimen/dp_35"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/new_person_ll_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/guideText"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toTopOf="@+id/new_person_tv_start"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/fb_white"
            android:layout_gravity="end"
            android:id="@+id/tv_guide_content"
            android:background="@drawable/shape_lang_guide_text_bg"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arg_res_0x7f1101a0"
            android:maxLines="1"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_40"
            app:autoSizeMaxTextSize="@dimen/sp_14"
            app:autoSizeMinTextSize="@dimen/sp_10"
            app:autoSizeTextType="uniform"/>
        <View
            android:layout_gravity="end"
            android:background="@drawable/ic_lang_guide_arrow"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="-0.5dp"
            android:rotation="180"
            android:layout_marginEnd="@dimen/dp_12"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
