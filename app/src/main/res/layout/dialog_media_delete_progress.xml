<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_recovery_progress_dialog_type_delete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    app:layout_constraintBottom_toBottomOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dia_media_delete_parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <filerecovery.photosrecovery.allrecovery.view.CustomProgressBar
            android:id="@+id/dia_media_delete_progress_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/ll_content_container"
            app:layout_constraintTop_toTopOf="parent"
            app:rivTopLeftRadius="@dimen/dp_20"
            app:rivTopRightRadius="@dimen/dp_20"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_content_container"
            android:paddingTop="@dimen/dp_46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_marginEnd="@dimen/dp_23"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_60"
                    android:textColor="@color/color_100_ffffff"
                    android:ellipsize="end"
                    android:layout_gravity="start|bottom"
                    android:id="@+id/dia_media_delete_progress_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:text="0/100"
                    android:singleLine="true"
                    android:fontFamily="@font/roboto_black"
                    android:textDirection="locale"
                    android:textAlignment="viewStart"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_9">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/common_progressbar_white_small"
                    app:lottie_repeatCount="-1"/>
                <TextView
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/color_100_ffffff"
                    android:layout_gravity="bottom"
                    android:id="@+id/dia_media_delete_progress_tv_checking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arg_res_0x7f110074"
                    android:fontFamily="@font/roboto_black"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_80_ffffff"
                android:layout_gravity="start|bottom"
                android:id="@+id/tv_wait_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arg_res_0x7f110081"
                android:fontFamily="@font/roboto_regular"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_102"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
