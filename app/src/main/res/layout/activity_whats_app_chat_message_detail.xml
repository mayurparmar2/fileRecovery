<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_wa_chat_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_detail_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_detail_rl_ad_root"
        app:layout_constraintTop_toBottomOf="@+id/chat_detail_ll_top_container"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_100_000000"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/chat_detail_faker_header_tv_date"
        android:background="@drawable/bg_wa_chat_detail_header"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/message_detail_rv"/>
    <filerecovery.photosrecovery.allrecovery.ui.widget.CommonWaEmptyView
        android:id="@+id/common_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_detail_rl_ad_root"
        app:layout_constraintTop_toBottomOf="@+id/chat_detail_ll_top_container"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/chat_detail_ll_top_container"
        android:background="@color/color_100_008069_1F2C34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/wa_chat_detail_iv_back"
            android:padding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/color_100_ffffff"
            app:srcCompat="@drawable/ic_topbar_back"/>
        <TextView
            android:textSize="@dimen/sp_20"
            android:textColor="@color/color_100_ffffff"
            android:ellipsize="end"
            android:id="@+id/chat_detail_tv_title"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_12"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/chat_detail_iv_filter_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_message_fifilter"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_100_white_00a884"
            android:id="@+id/chat_detail_tv_filter_delete_cancel"
            android:padding="@dimen/dp_2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arg_res_0x7f110000"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/chat_detail_rl_ad_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/chat_detail_ll_ad_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_148"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/chat_detail_ll_banner_ad_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_78"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
