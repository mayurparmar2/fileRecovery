<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_recovery_progress_dialog_type_delete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    app:layout_constraintBottom_toBottomOf="parent">
    <filerecovery.photosrecovery.allrecovery.view.CustomProgressBar
        android:id="@+id/dialog_junk_custom_progress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_junk_ll_content_container"
        app:layout_constraintTop_toTopOf="@+id/dialog_junk_ll_content_container"
        app:rivTopLeftRadius="@dimen/dp_20"
        app:rivTopRightRadius="@dimen/dp_20"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dialog_junk_ll_content_container"
        android:paddingTop="@dimen/dp_54"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_23"
        android:paddingEnd="@dimen/dp_23"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/sp_52"
            android:textColor="@color/color_100_ffffff"
            android:id="@+id/dialog_junk_tv_clean_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center_vertical"
                android:id="@+id/progress_cleaner_loading"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:indeterminateTint="@color/color_100_ffffff"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/common_progressbar_white_small"
                app:lottie_repeatCount="-1"/>
            <TextView
                android:textSize="@dimen/sp_26"
                android:textColor="@color/color_100_ffffff"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/arg_res_0x7f110222"
                android:fontFamily="@font/roboto_black"
                android:layout_marginStart="@dimen/dp_10"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_80_ffffff"
            android:gravity="start"
            android:id="@+id/dialog_junk_tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/arg_res_0x7f110081"
            android:fontFamily="@font/roboto_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_104"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
